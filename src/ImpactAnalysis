import { useState } from "react";
import { Search } from "lucide-react";

type ImpactLevel = "Green" | "Yellow" | "Red"; /* The impact levels for a report */
const reportsMock: {id: number,title: string, impact:ImpactLevel, uploadedBy:string} []= [
  { id: 1, title: "EIA - Pacific Region", impact: "Green", uploadedBy: "Norway" },
  { id: 2, title: "REMP - Atlantic Zone", impact: "Yellow", uploadedBy: "Japan" },
  { id: 3, title: "APEI - Deep Ridge", impact: "Red", uploadedBy: "USA" },
];
/* each impact level corresponds to a colour */
const impactColors: Record<ImpactLevel, string> = {
  Green: "#10b981", /* low impact */
  Yellow: "#f59e0b",
  Red: "#ef4444", /*high impact */
};

export default function ImpactAnalysis() {
  const [reports] = useState(reportsMock);  /*holds a list of reports */
  const [search, setSearch] = useState(""); /* holds the input value currently being searched*/

  return (
    <div className="text-white space-y-6">
             /*header */
      <h3 className="text-xl font-bold mb-4">Impact Metrics Dashboard</h3>

      /* Search Bar section */
      <div className="flex items-center gap-3 mb-4">
        <Search className="w-5 h-5 text-slate-400" />
        <input /* input field to search reports*/
          value={search}
          onChange={(e) => setSearch(e.target.value)}
          placeholder="Search reports..."
          className="bg-slate-800 px-4 py-2 rounded-md w-80 text-sm outline-none border border-slate-700"
        />
      </div>

      /* Report section*/
      <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {reports  /* filter reports based on what was searched*/
          .filter((r) => r.title.toLowerCase().includes(search.toLowerCase()))
          .map((r) => (
            <div
              key={r.id}  /* key for each report */
              className="p-4 bg-slate-900 border border-slate-700 rounded-xl shadow-md"
            >
              <h4 className="font-semibold">{r.title}</h4> /* report title */
              <p className="text-sm text-slate-400">Uploaded by: {r.uploadedBy}</p>
                    /* who uploaded the report*/
              <span
                className="mt-3 inline-block px-2 py-1 text-xs rounded-md text-black"
                style={{ background: impactColors[r.impact] }}
              >
                {r.impact}
              </span>
            </div>
          ))}
      </div>
    </div>
  );
}
